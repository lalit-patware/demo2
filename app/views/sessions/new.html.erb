<h1>Login</h1>
<%= bootstrap_form_for(:session, url: login_path ) do |form| %>
<div class="col-sm-5">
	<p>
  	<%#= form.label :email %><br>
    <%= form.email_field :email %>
  </p>
  <p>
    <%#= form.label :password %><br>
    <%= form.password_field :password %>
  </p>       
  <p>
    <%#= form.label :remember_me, class: "checkbox inline" do %>
    <%= form.check_box :remember_me %>
     <!-- <span>Remember</span> -->
    <%# end %>
  </p>       
  <p>
    <%= link_to 'forgot password',new_password_reset_path %>
  </p>
  </p>
    <%= form.submit "log in", class: "btn btn-primary btn-xs" %>
  </p>

<% end %>
<%= link_to "SIGN UP", new_user_path, class: "btn btn-primary btn-xs" %>
</div>
