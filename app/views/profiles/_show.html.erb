<div class="col-sm-3">

  <!-- <strong>image:</strong> -->
  <%if @profile.image.url %>
  <%#= link_to 'image', @profile.image.url %>
  <%= image_tag(@profile.image.url, width: "200px", height: "300px") %>
  <% end %>
  
</div>

<div class="col-sm-9">
<h2> <strong>Personal Information </strong></h2>
  <!-- <strong>name:</strong> -->
<h2><%= @profile.user.name %></h2>

 
<p>
  <strong>age:</strong>
  <%= @profile.age %> 
</p>


<p>
  <strong>contact_no:</strong>
  <%= @profile.contact_no %>
</p>
 
<p>
  <strong>dob:</strong>
  <%= @profile.dob %>
</p>

<p>
  <strong>city:</strong>
  <%= @profile.city %>
</p>

<h2><strong>Education details</strong></h2> 
<% @profile.educations.each do |education| %> 
  <p>
    <strong>SSC: </strong>
    <%= education.SSC %>
  </p>

  <p>
    <strong>HSC: </strong>
    <%= education.HSC %>
  </p>

  <p>
   <strong>graduation: </strong>
   <%= education.graduation %>
  </p>

  <p>
    <strong>post_graduation: </strong>
    <%= education.post_graduation %>
  </p>  
<% end %>

<h2><strong>Employment details</strong></h2>
<% @profile.employments.each do |employment| %>

  <p>
    <strong>company: </strong>
    <%= employment.company_1 %>
  </p>

  <p>
    <strong>position: </strong>
    <%= employment.position %>
  </p>

  <p>
    <strong>address: </strong>
    <%= employment.address %>
  </p>
 <p>-------------------------------</p>
<% end %>

<h2><strong> Skills details</strong></h2>
<% @profile.skills.each do |skill| %>

  <p>
  <strong>skills: </strong>
  <%= skill.skills %>
  </p>
 <p>-------------------------------</p>
<% end %>  

</div>