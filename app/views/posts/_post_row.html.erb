<td><%= post.title %></td>
<td><%= post.description %></td>
<td><%= image_tag post.image.url, width: "50px", height: "50px"  if post.image? %></td>
<td><%= link_to 'Show', post_path(post) %></td>
<td><%= link_to 'Edit', edit_post_path(post),remote: true %></td>
<td><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'delete permanently?' },remote: true %></td>