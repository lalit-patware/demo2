<table>
  <tr>
    <th>TITLE</th><br>
    <br><th>DESCRIPTION</th>
    <th>USER NAME </th>
    <th>IMAGE</th>
    <th colspan="4"></th>
  </tr>
  <% @posts.each do |post| %>
   <tr class = "post-number-<%= post.id%>">
     <td><%= post.title %></td> 
     <td><%= post.description %></td>
     <td>
       <% p = post.user.profile %>
       <% if p %>
         <%= link_to post.user.name, profile_path(p)%>
       <% else %>
         <% link_to post.user.name, 'javascript:void(0);' %>
       <% end %>
     </td>
     <td><%= image_tag post.image.url, width: "50px", height: "50px" if post.image? %></td> 
     <td><%= link_to 'Show', post_path(post) %></td>            
   </tr>
  <% end %>  
</table>
  